@model SSinternational.viewmodel.GardenAddEditVM
@{
    ViewBag.Title = "WmsPro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var customerList = Model.customerList.Select(m => new SelectListItem { Value =m.customerId.ToString(),Text=m.customername.ToString()});   
 }

<div class="container-fluid">
    <div class="header-panel-info">
        <div class="row">
        
            <div class="col-md-6">
                <ul class="header-info-left">
                    <li>Add Garden</li>
                     
                </ul>
            </div>
            <div class="col-md-6">

              
               
                 <ul class="header-info-right">
                    
                    <li>
                        <a href="@Url.Action("addEdit","Garden")" class="btn btn-primary" role="button">ADD NEW</a>
                    </li>
                    <li><a href="@Url.Action("Index","Garden")" class="btn btn-primary" role="button">LIST</a></li>
                </ul> 
            </div>
       
        </div> 
         </div><!--end row panel-->
 </div>
<div style="width:60% ;margin:0 auto;">
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading"> <i class="fa fa-address-book-o" aria-hidden="true"></i> Garden</div>
            <div class="panel-body">
                @using (Html.BeginForm("addEdit", "Garden", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(true, "", new { @class="text-danger"})
                    
                       @Html.HiddenFor(m => m.gardenId);
                   <div class="form-group">
                         @Html.LabelFor(m => m.gardenname, new {@class="col-sm-2 control-label"})
                        <div class="col-sm-10">
                             @Html.TextBoxFor(m=>m.gardenname,new {@class="form-control",placeholder="Garden name"})
                        <span  class="help-block" style="color:red">@Html.ValidationMessageFor(m=>m.gardenname)</span>
                        </div>
                    </div>

                    
                    <div class="form-group">
                         @Html.LabelFor(m => m.gardencode, new {@class="col-sm-2 control-label"})
                        <div class="col-sm-10">
                             @Html.TextBoxFor(m=>m.gardencode,new {@class="form-control",placeholder="Garden code"})
                        </div>
                    </div>
                    
                    
                    <div class="form-group">
                         @Html.LabelFor(m=>m.customerid, new{@class="col-sm-2 control-label"})
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m=>m.customerid,(IEnumerable<SelectListItem>)customerList,"--Select--",new {@class="form-control"})
                            <span  class="help-block" style="color:red">@Html.ValidationMessageFor(m=>m.customerid)</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-2 control-label"></div>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@Url.Action("Index","Garden")" class="btn btn-primary" role="button">Cancel</a>
                        </div>
                    </div>
            
                    
                }
            
            
            </div>
    </div>

</div>

