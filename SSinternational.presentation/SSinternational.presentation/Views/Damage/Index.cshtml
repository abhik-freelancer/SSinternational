@model IEnumerable<SSinternational.viewmodel.DamagetypesVM>
@{
    ViewBag.Title = "WMSpro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="header-panel-info">
        <div class="row">
        
            <div class="col-md-6">
                <ul class="header-info-left">
                    <li>List of Damages</li>
                     
                </ul>
            </div>
            <div class="col-md-6">

              
               
                <ul class="header-info-right">
                    <li>
                        <a href="@Url.Action("addEdit","Damage")" class="btn btn-primary" role="button">ADD NEW</a>
                    </li>
                    <li><a href="@Url.Action("Index","Damage")" class="btn btn-primary" role="button">LIST</a></li>
                </ul> 
            </div>
       
        </div> 
         </div><!--end row panel-->
    </div>
<div class="body-container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
									<table class="table table-bordered table-hover" id="damage-tbl" > 
										<thead>
												 <tr>
                                                    <th>Damagetype</th>
                                                    <th>Code</th>
                                                    <th>Action</th>
                                                 </tr>
											</thead>
											<tbody>
                                                @foreach (var damagetype in Model)
                                                {
												<tr>
                                                        <td>@damagetype.Description</td>
                                                       
                                                        <td>@damagetype.DamageCode</td>
                                                        <td>
                                                            <a href="@Url.Action("addEdit", "Damage", new  {DamageId=@damagetype.DamageId})" class="btn btn-xs btn-primary" role="button">Edit</a>
                                                            <button class='btn btn-danger btn-xs damage-del' data-id="@damagetype.DamageId"  
                                                                data-toggle="modal" data-target="#cnf-modal-damage"><span class="fa fa-times"></span> Delete</button>
                                                        </td>
                                                        
                                                </tr>
                                                }
                                            </tbody>
									</table>
            </div>
        </div>

    </div>

</div>


<!-- Modal for confirmation-->
<div id="cnf-modal-damage" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Damage Delete</h4>
      </div>
      <div class="modal-body">
        <p>Are sure to delete this record ?</p>
          <p><input type="hidden" value="" id="hd-damage" /></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-default damage-del-confirm" data-dismiss="modal">Yes</button>
      </div>
    </div>

  </div>
</div>
<!-- Modal for successfull/unsuccessfull delete-->
<div id="damage-delete-success" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Warehouse Delete</h4>
      </div>
      <div class="modal-body damage-message">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-damage-succdel" data-dismiss="modal">Okay</button>
       </div>
    </div>

  </div>
</div>
