@model SSinternational.viewmodel.CatalogueVM
@{
    var brokerLst = Model.brokerList.Select(m => new SelectListItem { Value = m.BrokerId.ToString(), Text = m.BrokerName.ToString() });
   }



<div class="container-fluid">

               <form class="form-horizontal">
                    <div class="form-group">
                        <span class="label label-default">Arrival</span>
                        <span class="label label-primary">@Model.arrivalNumber</span>
                        <span class="label label-success">Date:</span>
                        <span class="label label-info">@Model.arrivalDate</span>
                        <span class="label label-warning">Crop Yr:</span>
                        <span class="label label-danger">@Model.yearofproduction</span>
                        <span class="label label-warning">Invoice:</span>
                        <span class="label label-danger">@Model.invoices</span>
                        <span class="label label-success">Grade:</span>
                        <span class="label label-danger">@Model.grade</span>
                        <span class="label label-danger">Net:</span>
                        <span class="label label-danger">@Model.net</span>





                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="ctlgDt">Date:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="ctlgDt" placeholder="Date" value="@DateTime.Now.ToString("dd-MM-yyyy")">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="catlgSale">Sale no:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="catlgSale" placeholder="Sale no.">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="catlgLot">Lot no:</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="catlgLot" placeholder="Lot no.">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" for="catlgSerial">Serial:</label>
                        <div class="col-sm-8">
                          @Html.DropDownList("Serial", ViewData["serial"] as List<SelectListItem>, "---Select---", new {@class="form-control",@id="chstSerial" })   
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" for="catlgBroker">Broker:</label>
                        <div class="col-sm-8">
                          @Html.DropDownListFor(m => m.brokerId, (IEnumerable<SelectListItem>)brokerLst, "--Select--", new {@class="form-control",@id="catlgbroker"}) 
                        </div>
                    </div>

                </form>


      
       
            
        
</div>
