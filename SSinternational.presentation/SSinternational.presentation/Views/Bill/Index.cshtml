@model IEnumerable<SSinternational.viewmodel.BillVM>
@{
    ViewBag.Title = "Wms-Pro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="header-panel-info">
        <div class="row">
        
            <div class="col-md-6">
                <ul class="header-info-left">
                    <li>List of Invoices</li>
                     
                </ul>
            </div>
            <div class="col-md-6">

              
               
                <ul class="header-info-right">
                    <li>
                        <a href="@Url.Action("addEditBill", "Bill", new {arrivalMasterId=@ViewBag.arrivalMasterId})" class="btn btn-primary" role="button">ADD NEW</a>
                    </li>
                    <li><a href="@Url.Action("Index", "Bill", new { arrivalId=@ViewBag.arrivalMasterId})" class="btn btn-primary" role="button">LIST</a></li>
                </ul> 
            </div>
       
        </div> 
         </div><!--end row panel-->
    </div>
<div class="body-container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
									<table class="table table-bordered table-hover" id="buyerBilllst-tbl" > 
										<thead>
												 <tr>
                                                    <th>Bill.</th>
                                                    <th>Delivery Date</th>
                                                    <th>Buyer</th>
                                                    <th>Sarkar</th>
                                                    <th>Do-Number</th>
                                                    <th>Do-Date</th>
                                                    <th>Bill Amount</th>
                                                    <th>Action</th>

                                                 </tr>
											</thead>
											<tbody>
                                                @foreach(var Bills in Model){
												<tr>
                                                        <td>@Bills.billnumber</td>
                                                        <td>@Bills.deliverydate.ToString("dd/MM/yyyy")</td>
                                                        <td>@Bills.buyer</td>
                                                        <td>@Bills.sarkar</td>
                                                        <td>@Bills.doNumber</td>
                                                        <td>@Bills.doDate.ToString("dd/MM/yyyy")</td>
                                                        <td>@Bills.grandtotalamount</td>
                                                        <td>
                                                            <a href="@Url.Action("addEditBill", "Bill", new { billmasterId=@Bills.billId})" class="btn btn-xs btn-primary" role="button">Edit</a>
                                                        </td>
                                                        
                                                </tr>
                                                }
                                            </tbody>
									</table>
            </div>
        </div>

    </div>

</div>

