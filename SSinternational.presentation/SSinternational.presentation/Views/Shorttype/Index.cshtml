@model IEnumerable<SSinternational.viewmodel.ShorttypesVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="header-panel-info">
        <div class="row">
        
            <div class="col-md-6">
                <ul class="header-info-left">
                    <li>List of Estate</li>
                     
                </ul>
            </div>
            <div class="col-md-6">

              
               
                <ul class="header-info-right">
                    <li>
                        <a href="@Url.Action("addEdit","Shorttype")" class="btn btn-primary" role="button">ADD NEW</a>
                    </li>
                    <li><a href="@Url.Action("Index","Shorttype")" class="btn btn-primary" role="button">LIST</a></li>
                </ul> 
            </div>
       
        </div> 
         </div><!--end row panel-->
    </div>
<div class="body-container">
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
									<table class="table table-bordered table-hover" id="short-tbl" > 
										<thead>
												 <tr>
                                                    <th>Short</th>
                                                    <th>Code</th>
                                                    <th>Action</th>
                                                 </tr>
											</thead>
											<tbody>
                                                @foreach(var shorttype in Model){
												<tr>
                                                        <td>@shorttype.ShortName</td>
                                                        <td>@shorttype.ShortCode</td>
                                                        <td>
                                                            <a href="@Url.Action("addEdit", "Shorttype", new  {ShortId = @shorttype.ShortId })" class="btn btn-xs btn-primary" role="button">Edit</a>
                                                            <button class='btn btn-danger btn-xs short-del' data-id="@shorttype.ShortId"  data-toggle="modal" data-target="#shortMsgModal"><span class="fa fa-times"></span> Delete</button>
                                                        </td>
                                                        
                                                </tr>
                                                }
                                            </tbody>
									</table>
            </div>
        </div>

    </div>

</div>



<!-- Modal for confirmation-->
<div id="shortMsgModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Short Delete</h4>
      </div>
      <div class="modal-body">
        <p>Are sure to delete this record ?</p>
          <p><input type="hidden" value="" id="hd-shortId" /></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
        <button type="button" class="btn btn-default short-del-confirm" data-dismiss="modal">Yes</button>
      </div>
    </div>

  </div>
</div>
<!-- Modal for successfull/unsuccessfull delete-->
<div id="est-delete-success" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Esteate Delete</h4>
      </div>
      <div class="modal-body message-short">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-shortsuccdel" data-dismiss="modal">Okay</button>
       </div>
    </div>

  </div>
</div>


